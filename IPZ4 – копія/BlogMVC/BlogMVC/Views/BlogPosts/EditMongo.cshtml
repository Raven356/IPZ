@model EditBlogPostViewModelMongo

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>BlogPost</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditMongo">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (Model.Image != null && Model.Image.Length > 0)
            {
                <img src="@Url.Action("GetImage", "BlogPosts", new { imageBytes = Model.Image })" alt="Uploaded Image" class="img-thumbnail" />
            }
            <div class="form-group">
                <label asp-for="ImageFile" class="control-label"></label>
                <input asp-for="ImageFile" type="file" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Text" class="control-label"></label>
                <input asp-for="Text" class="form-control" />
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryName" class="control-label"></label>
                <input asp-for="CategoryName" class="form-control" value="@Model.CategoryName" />
            </div>
            <div class="form-group">
                <input asp-for="Date" type="hidden" value="@DateTime.Now" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Tags" class="control-label"></label>
                <input asp-for="Tags" class="form-control" value="@Model.Tags" />
            </div>
            <input asp-for="Id" type="hidden" value="@Model.Id" />
            <input asp-for="AuthorId" type="hidden" value="@Model.AuthorId" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="IndexMongo">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
